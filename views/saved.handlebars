<div class = "container">
    <div class = "row">
        {{#each data}}
            <div class="card mx-1 my-2" style="width: 16rem;">
                <img class="card-img-top" src="{{this.pic}}" alt="">
                <div class="card-body">
                    <a href="{{this.wwwDoc}}">
                        <p class = "card-text">{{this.date}}</p>
                        <p class = "card-text h4">{{this.artname}}</p>
                        <p class = "card-text">{{this.blurp}}</p>
                    </a>
                </div >
                <button id="{{this._id}}"
                        class="btn btn-danger btn-sm offset-3 mb-3 delNewsbyte"
                        style="width:50%;" type="submit" formmethod="POST">DELETE NEWSBYTE</button>
            </div>
        {{/each}}
    </div>
</div>